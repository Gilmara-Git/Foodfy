<fieldset>
    <div class="user-fields">
           
            <div class="inputs">
                <div class="field-name">Email</div>

                <input type="email"
                id="email" 
                name="email" 
                placeholder="Type your email" 
                value="{{user.email}}"
                onblur="Validate.apply(this, 'emailFormat')">      
            </div>

             <div class="inputs">
                <div class="field-name">Senha</div>
                <input type="password" 
                id="password"
                name="password" 
                placeholder="Type your password" 
                required
                >
            </div>
           
            
                <div class="session-buttons">
                    <a id="forgot-password" href='/admin/users/forgot-password'>Forgot Password</a>
                    <button id="login" form="new-session" type="submit">Login</button>
                    
                </div>
          
    </div>
      

</fieldset>