<fieldset>
    <div class="user-fields">
           
            <div class="inputs">
                <div class="field-name">Email</div>

                <input type="email"
                id="email" 
                name="email" 
                placeholder="Type your email" 
                value="{{user.email}}"
                onblur="Validate.apply(this, 'emailFormat')">      
            </div>

             <div class="inputs">
                <div class="field-name">Password</div>
                <input type="password" 
                id="password"
                name="password" 
                placeholder="Type a secure password" 
                required
                >
            </div>
            
             <div class="inputs">
                <div class="field-name">Repeat Password</div>
                <input type="password" 
                id="password"
                name="passwordRepeat" 
                placeholder="Repeat password" 
                required
                >
            </div>
           
            
                <div class="new-password-button">
                    
                    <button id="new-password" form="new-session" type="submit">New Password</button>
                    
                </div>

                <input type="hidden" name="token" value="{{token}}"/>
          


    </div>
     
     

</fieldset>