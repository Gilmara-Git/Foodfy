    <div class="messages error">
        {{error}}
    </div>

{% endif %}

{%if errorOnPageWithoutHeader %}
    <div class="messages errorOnPageWithoutHeader">
        {{errorOnPageWithoutHeader}}
    </div>

{% endif %}

